@model IEnumerable<Category>
@{
    ViewBag.Title = "Create Category";
}
<h1 class="h3 mb-2 text-gray-800"><a asp-action="Create" asp-controller="Category" asp-area="Admin" class="text-decoration-none text-dark btn btn-primary">Create Category</a></h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List CategoryType</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>CategoryType</th>
                        <th>Edit</th>
                        <th>Del</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>CategoryType</th>
                        <th>Edit</th>
                        <th>Del</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var c in Model ?? Enumerable.Empty<Category>())
                    {
                        <tr>
                            <td>@c.Id</td>
                            <td>@c.Name</td>
                            <td>@c.CategoryType.Name</td>
                            <td><a asp-action="Edit" asp-controller="Category" asp-area="Admin" class="btn btn-warning" asp-route-id="@c.Id">Edit</a></td>
                            <td>
                                <form asp-action="Delete" asp-controller="Category" asp-area="Admin" method="post">
                                    <input type="hidden" name="id" value="@c.Id" />
                                    <input type="submit" name="del" value="Del" class="btn btn-danger" />
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>